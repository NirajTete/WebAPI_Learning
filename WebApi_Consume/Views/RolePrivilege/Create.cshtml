@model WebAPI_Learning.Models.RolePrivilegeDTO

<div class="page-titles d-flex justify-content-between align-items-center">
    <ol class="breadcrumb mb-0">
        <li><h5 class="bc-title">Create Role</h5></li>
    </ol>
    <div>
        <a asp-controller="RolePrivilege" asp-action="Index" class="btn-sm btn-secondary me-2">
            <i class="fas fa-arrow-left me-2"></i> Back
        </a>
    </div>
</div>

<div class="container-fluid p-2">
    <div class="col-xl-12 active-p">
        <div class="card">
            <div class="card-body p-4">

                <form asp-action="Create" id="create-form" method="post">
                    <div class="row">
                        <!-- Role Privilege Name -->
                        <div class="col-sm-4">
                            <label asp-for="RolePrivilegeName">Role Privilege Name</label>
                            <input asp-for="RolePrivilegeName" class="form-control" />
                            <span asp-validation-for="RolePrivilegeName" class="text-danger"></span>
                        </div>

                        <!-- Privilege Description -->
                        <div class="col-sm-4">
                            <label asp-for="Description">Privilege Description</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- IsActive -->
                        <div class="col-4 d-flex align-items-center justify-content-center">
                            <input asp-for="IsActive" class="" type="checkbox" />
                            <label class="mx-2" asp-for="IsActive">Active</label>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success create-btn mt-2">
                        <i class="fas fa-plus-circle"></i> Create Role
                    </button>

                </form>

            </div>
        </div>
    </div>
</div>

